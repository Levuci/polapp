<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgprofilecalon"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Kandidat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#6A89FE"
        android:padding="10dp"
        android:background="@drawable/bg4"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="328dp"
        android:layout_height="298dp"
        android:layout_marginTop="24dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="103dp"
                android:layout_height="118dp"
                android:background="@drawable/bg5"
                android:id="@+id/ivcagub"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#6A89FE"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:text="Gubernur"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:id="@+id/tvnamacagub"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:padding="6dp"
                    android:background="@color/white"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TTL :"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:id="@+id/tvttlcagub"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Riwayat Pendidikan :"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:id="@+id/tvriwayatcagub"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:text="Biografi Singkat :"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10dp"
                android:id="@+id/tvbiograficagub"
                android:background="@color/white"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="328dp"
        android:layout_height="298dp"
        android:layout_marginTop="24dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="103dp"
                android:layout_height="118dp"
                android:background="@drawable/bg5"
                android:id="@+id/ivcawgub"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#6A89FE"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:text="Wakil Gubernur"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:id="@+id/tvnamacawagub"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:padding="6dp"
                    android:background="@color/white"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TTL :"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:id="@+id/tvttlcawagub"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Riwayat Pendidikan :"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:id="@+id/tvriwayatcawagub"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:text="Biografi Singkat :"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10dp"
                android:id="@+id/tvbiograficawagub"
                android:background="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg4"
        android:layout_marginTop="60dp">

        <ImageButton
            android:layout_marginLeft="50dp"
            android:layout_width="33dp"
            android:id="@+id/ibhome"
            android:background="@drawable/logohome"
            android:layout_height="33dp">

        </ImageButton>

        <ImageButton
            android:layout_marginLeft="50dp"
            android:layout_width="33dp"
            android:id="@+id/ibsuara"
            android:background="@drawable/logo2"
            android:layout_height="33dp">

        </ImageButton>

        <ImageButton
            android:layout_marginLeft="50dp"
            android:layout_width="33dp"
            android:id="@+id/ibnews"
            android:background="@drawable/logo3"
            android:layout_height="33dp">

        </ImageButton>

        <ImageButton
            android:layout_marginLeft="50dp"
            android:layout_width="33dp"
            android:id="@+id/ibakun"
            android:background="@drawable/logo4"
            android:layout_height="33dp">

        </ImageButton>
    </LinearLayout>

</LinearLayout>