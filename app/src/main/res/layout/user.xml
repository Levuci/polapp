<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DC7171"
        android:text="PROFILE USER"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/ivuser"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/tvbelum"
                android:layout_marginTop="20dp"
                android:textColor="#CD0404"
                android:textSize="20dp"
                android:background="@drawable/bg3"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="haven't voting yet"/>

            <TextView
                android:layout_width="170dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/tvsudah"
                android:padding="5dp"
                android:background="@drawable/bg3"
                android:layout_marginTop="20dp"
                android:textColor="#0AE80A"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="already voting"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etemail"
        android:textSize="20dp"
        android:background="@color/white"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:hint="Email"/>

    <TextView
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etfname"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:textStyle="bold"
            android:background="@color/white"
            android:padding="15dp"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:hint="Full Name"/>

    <TextView
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etnik"
            android:drawableStart="@drawable/ic_baseline_credit_card_24"
            android:textStyle="bold"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:background="@color/white"
            android:padding="15dp"
            android:hint="ID Number"/>

    <TextView
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etalamat"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:textStyle="bold"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:hint="Residence"/>




</LinearLayout>